  <label>Ingrediente Selecionado: {{ingredientSelected.name}}</label><br />
    <select placeholder="Selecione o ingrediente" [(ngModel)]="ingredientSelected">
      <option *ngFor="let ing of allIngredients" [value]="ing">{{ing.name}}</option>
    </select>
    <label>Informe a quantidade</label>
    <input type="number" [(ngModel)]="quantitySelected"  >
    <button (click)="addItemToSnack()">Adicionar</button>

  <table>
    <tr>
        <th><b>QUANTIDADE</b></th>
        <th><b>LANCHE</b></th>
        <th><b>VALOR UNITÁRIO</b></th>
        <th><b>VALOR TOTAL</b></th>
        <th><b>AÇÕES</b></th>
    </tr>
    <tr *ngFor='let item of snackIngredients; let id = index'>
      <td>{{item.quantity}}</td>
      <td>{{item.ingredient.name}}</td>
      <td>{{item.ingredient.price | number : '1.2-2'}}</td>
      <td>{{(item.ingredient.price * item.quantity) | number : '1.2-2'}}</td>
      <td><button type="button" mdbBtn color="primary" rounded="true" (click)="onRemove(item)">Remover</button></td>
    </tr>
  </table>
